<Window x:Class="ScreenRecorder.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenRecorder"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Screen Recorder"
        Background="Gray"
        Height="450" 
        Width="800" 
        ResizeMode="NoResize" 
        Topmost="False"
        WindowState="Normal" 
        Icon="./Resources/favicon.ico">

    <Window.Resources>

    </Window.Resources>

    <TabControl Margin="2">
        <TabItem Header="Video" Width="100">
            <Canvas Width="780" Height="385">
                <TextBox Name="RecordingLocation" Height="23" Canvas.Left="116" TextWrapping="NoWrap" Canvas.Top="8" Width="300" IsEnabled="False" VerticalContentAlignment="Center"/>
                <TextBox Name="TemporaryLocation" Height="23" Canvas.Left="116" TextWrapping="NoWrap" Canvas.Top="36" Width="300" IsEnabled="False" VerticalContentAlignment="Center"/>
                <Button Content="Select Folder" Canvas.Left="421" Canvas.Top="8" Width="90" Height="23" Click="BtnRecordingLocation_Click"/>
                <Button Content="Select Folder" Canvas.Left="421" Canvas.Top="36" Width="90" Height="23" Click="BtnTemporaryLocation_Click"/>
                <Label Content="Recording Location" Canvas.Top="8" Height="23" Width="116" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0" />
                <Label Content="Temporary Location" Canvas.Top="36" Height="23" Width="116" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="0"/>

            </Canvas>
        </TabItem>
        <TabItem Header="Audio" Width="100">
            <Canvas Width="780" Height="385">

            </Canvas>
        </TabItem>
    </TabControl>



</Window>
